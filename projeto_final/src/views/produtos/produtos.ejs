<!-- Listagem de Produtos -->
<main class="min-h-screen bg-gray-100 p-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold">Produtos</h1>
        <div class="flex space-x-4">
            <a href="/adicionar_produto">
                <button class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700">
                    Adicionar Produto
                </button>
            </a>
            <a href="/deletar_cliente">
                <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700">
                    Deletar Produto
                </button>
            </a>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">
                        Nome
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-sm font-medium uppercase tracking-wider">
                        Pre√ßo
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <% data.forEach(function(item) { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.Nome %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">R$ <%= item.Preco %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</main>