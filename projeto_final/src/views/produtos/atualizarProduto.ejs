<!-- views/editar_cliente.ejs -->
<main style="min-height: 92vh;" class="bg-gray-100 p-8 flex items-center justify-center">
    <div class="w-full max-w-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Editar Produto</h2>
        <form action="/atualizarProduto/<%= produto.ProdutoID %>" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <input type="hidden" id="ProdutoID" name="ProdutoID" value="<%= produto.ProdutoID %>">
            <div class="mb-4">
                <label for="Nome" class="block text-gray-700 text-sm font-bold mb-2">Nome do Produto:</label>
                <input type="text" id="Nome" name="Nome" value="<%= produto.Nome %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="mb-4">
                <label for="Preco" class="block text-gray-700 text-sm font-bold mb-2">Preco do Produto:</label>
                <input type="Preco" id="Preco" name="Preco" value="<%= produto.Preco %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="flex items-center justify-end">
                <a href="/produtos"><button type="button" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Voltar
                </button></a>
                <button type="submit" style="margin-left: 10px;" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Atualizar Produto
                </button>
            </div>
        </form>
    </div>
</main>
